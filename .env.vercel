# Environment Variables for Vercel Deployment

## Frontend (.env.local)
NEXT_PUBLIC_API_URL=https://your-backend-url.railway.app

## Backend (Railway/Render)
DATABASE_URL=postgresql://user:password@host:5432/leadenforce
MONGODB_URL=mongodb+srv://user:password@cluster.mongodb.net/leadenforce
REDIS_URL=redis://default:password@host:6379

JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

API_PORT=3001
FRONTEND_URL=https://your-app.vercel.app
BACKEND_URL=https://your-backend.railway.app

# Platform Limits
LINKEDIN_CONNECT_LIMIT=20
LINKEDIN_MESSAGE_LIMIT=50
LINKEDIN_VISIT_LIMIT=100

# Proxy Configuration (REQUIRED)
PROXY_PROVIDER=luminati
PROXY_API_KEY=your_proxy_api_key
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# Encryption
ENCRYPTION_KEY=32_character_encryption_key_here

# Billing (Optional)
STRIPE_SECRET_KEY=sk_live_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

## Workers (Render)
DATABASE_URL=postgresql://user:password@host:5432/leadenforce
REDIS_URL=redis://default:password@host:6379
ENCRYPTION_KEY=32_character_encryption_key_here
