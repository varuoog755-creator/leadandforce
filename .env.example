# Database Configuration
DATABASE_URL=postgresql://leadenforce_user:secure_password@localhost:5432/leadenforce
MONGODB_URL=mongodb://admin:secure_password@localhost:27017/leadenforce?authSource=admin
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRY=7d

# API Configuration
PORT=3001
NODE_ENV=development

# Frontend URL
NEXT_PUBLIC_API_URL=http://localhost:3001

# Proxy Configuration (Luminati/Smartproxy)
PROXY_PROVIDER=luminati
PROXY_API_KEY=your_proxy_api_key
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# LinkedIn Limits (Anti-Ban)
LINKEDIN_MAX_CONNECTS_PER_DAY=30
LINKEDIN_MAX_VISITS_PER_DAY=100
LINKEDIN_MIN_DELAY_SECONDS=30
LINKEDIN_MAX_DELAY_SECONDS=120

# Instagram Limits
INSTAGRAM_MAX_FOLLOWS_PER_HOUR=50
INSTAGRAM_MAX_LIKES_PER_HOUR=150
INSTAGRAM_MAX_COMMENTS_PER_HOUR=30

# Facebook Limits
FACEBOOK_MAX_FRIEND_REQUESTS_PER_DAY=50
FACEBOOK_MAX_GROUP_POSTS_PER_DAY=10

# Monitoring
SENTRY_DSN=your_sentry_dsn_url

# Billing (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_STARTER=price_starter_plan_id
STRIPE_PRICE_ID_PRO=price_pro_plan_id
STRIPE_PRICE_ID_ENTERPRISE=price_enterprise_plan_id
